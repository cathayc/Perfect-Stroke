<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.FitWindowsLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.cathychang.athenahacks.Foundation">

    <TextView
        android:id="@+id/introFoundation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textAlignment="center"
        android:inputType="textPersonName"
        android:text="What type of foundation do you have?"
        android:textStyle="italic"
        android:textSize="20dp"
 />

    <CheckBox
        android:id="@+id/powder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Powder"
 />

    <CheckBox
        android:id="@+id/liquid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Liquid" />

    <CheckBox
        android:id="@+id/none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="None" />

    <Button
        android:id="@+id/nextFoundation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@color/colorPrimaryDark"
        android:text="Next" />
</android.support.v7.widget.FitWindowsLinearLayout>
