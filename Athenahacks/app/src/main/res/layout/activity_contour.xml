<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.FitWindowsLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.cathychang.athenahacks.Contour">

    <TextView
        android:id="@+id/introContour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Do you have contour?"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="6dp" />

    <CheckBox
        android:id="@+id/contourYes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yes" />

    <CheckBox
        android:id="@+id/contourNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No" />

    <TextView
        android:id="@+id/introBlush"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Do you have blush?" />

    <CheckBox
        android:id="@+id/blushYes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yes" />

    <CheckBox
        android:id="@+id/blushNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No" />

    <Button
        android:id="@+id/nextContour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next" />

</android.support.v7.widget.FitWindowsLinearLayout>
